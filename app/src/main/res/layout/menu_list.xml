<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    android:background="#4b000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<FrameLayout
            android:id="@+id/frame_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#48367e"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Menu"
            android:textColor="#ffffff"
            android:textSize="8sp"
            android:textStyle="bold" />
        </FrameLayout>
-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/frameCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="top|right"
            android:layout_marginEnd="12dp">
            <TextView
                android:id="@+id/tvApprovedCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:background="@drawable/ic_circle_bottom"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="8sp"
                android:textStyle="bold" />
        </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#48367d"
                    android:scaleType="centerCrop"
                    app:civ_border_color="#d9d9db"
                    app:civ_border_width="0dp" />

            </FrameLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_discount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txtmenu_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#f39c19"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="8sp"
                android:textStyle="bold" />

        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>