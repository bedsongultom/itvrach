                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#7D48367D"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Shipping Address"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_shippingaddress"/>
            </LinearLayout>

                <!--shipping address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/tv_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:text="First Name"
                        android:textAlignment="gravity"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <com.bluejamesbond.text.DocumentView
                            android:id="@+id/tv_address"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent"
                            app:documentView_textAlignment="justified"
                            android:layout_gravity="center_horizontal"
                            app:documentView_insetPaddingLeft="10dp"
                            app:documentView_insetPaddingRight="5dp"
                            app:documentView_textSize="14sp"
                            app:documentView_textFormat="formatted"
                            app:documentView_antialias="true"
                            app:documentView_insetPaddingTop="5dp"
                            app:documentView_insetPaddingBottom="5dp"
                            app:documentView_textColor="#000"
                            android:textColor="#000">

                        </com.bluejamesbond.text.DocumentView>
                    </LinearLayout>

                <LinearLayout
