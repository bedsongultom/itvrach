                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:textColor="#000"
                        android:text="HP."/>
                </LinearLayout>







