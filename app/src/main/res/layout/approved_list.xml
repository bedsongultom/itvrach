<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="0dp"
    android:id="@+id/mCard"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


        <TextView
                android:id="@+id/txtNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_circle"
                android:gravity="center_vertical"
                android:hint="No"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtSessionId"
                android:layout_width="206dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:hint="Session Id"
                android:textColorHint="@color/colorPrimaryDark"
                android:visibility="gone"
                android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtTransactionId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:hint="Trans ID"
                    android:textColorHint="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/txtConfirmation"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="@color/accent"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/txtApproved"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="@color/accent"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/txtTransactionDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:gravity="right|center_vertical"
                android:textAlignment="inherit"
                android:hint="Transaction Date"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_weight="1"/>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">


            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:hint="Transaction No"
                android:paddingEnd="3dp"
                android:paddingStart="34dp"
                android:text="Transaction Total"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="0.12" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:text=":"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>


            <TextView
                android:id="@+id/txtPaymentTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:textAlignment="gravity"

                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:hint="Rp.0"
                android:textColorHint="@color/colorPrimaryDark"



                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:foregroundGravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textApprove"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="Approve"
            android:textColor="#F39C12"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textAlignment="gravity"

            android:textSize="12sp"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/chk_Approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:buttonTint="@color/colorPrimaryDark" />
    </LinearLayout>


</android.support.v7.widget.CardView>

