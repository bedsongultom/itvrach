<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="1dp"
    card_view:cardCornerRadius="0dp"
    android:id="@+id/mCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtNo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_circle"
            android:gravity="center_vertical"
            android:hint="No"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textAlignment="center"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtId"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Id"
            android:textAlignment="center"
            android:textColorHint="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/txtsessionID"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Id"
            android:textAlignment="center"
            android:textColorHint="@android:color/holo_red_dark"
            android:layout_weight="0.21" />

        <TextView
            android:id="@+id/txtItem_code"
            android:layout_width="10dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"
            android:hint="item code"
            android:textColorHint="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/txtItem_name"
            android:layout_width="107dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="0.97"
            android:gravity="center_vertical"
            android:hint="item name"
            android:textColorHint="@android:color/holo_red_dark" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtQty"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:layout_weight="6.60"
                android:gravity="right|center_vertical"
                android:hint="Qty :"
                android:textAlignment="gravity"
                android:textColorHint="@android:color/holo_red_dark" />


            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:layout_weight="6.60"
                android:gravity="right|center_vertical"
                android:text="Price"
                android:textColorHint="@android:color/holo_red_dark" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textWeight"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:gravity="right|center_vertical"
                android:hint="Weight :"
                android:textAlignment="gravity"
                android:textColorHint="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/txtWeight"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="left"
                android:layout_marginEnd="5dp"
                android:gravity="left|center_vertical"
                android:hint="Weight"
                android:textColorHint="@android:color/holo_red_dark" />


            <TextView
                android:id="@+id/txtQtyPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:gravity="right|center_vertical"
                android:hint="Rp"
                android:textAlignment="gravity"
                android:textColorHint="@android:color/holo_red_dark" />





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDisc"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:gravity="right|center_vertical"
                android:hint="Disc :"
                android:textAlignment="gravity"
                android:textColorHint="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/txtDisc"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="left"
                android:layout_marginEnd="5dp"
                android:gravity="left|center_vertical"
                android:hint="Disc"
                android:textColorHint="@android:color/holo_red_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="right|center_vertical">
                <TextView
                    android:id="@+id/txtDiscRp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="5dp"
                    android:gravity="right|center_vertical"
                    android:hint="Disc Rp"
                    android:textAlignment="gravity"
                    android:textColorHint="@android:color/holo_red_dark"
                    android:layout_weight="9.30" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

