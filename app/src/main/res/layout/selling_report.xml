            <EditText
                android:id="@+id/edToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_today_calendar"
                android:drawableTint="@color/orange_color"
                android:hint="To: 1984-05-25"

                android:paddingEnd="5dp"
                android:paddingStart="5dp"

                android:paddingTop="5dp"
                android:paddingBottom="12dp"
                android:textColor="#000"
                android:textColorHint="#868383"
                android:textSize="14sp"
                android:layout_weight="2.10" />
           <!-- </LinearLayout>-->


            <LinearLayout
                android:id="@+id/toImgLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"

                android:orientation="vertical"
                android:background="#FFF"
                android:paddingTop="0dp">

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/btn_border"

                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scaleType="center"
                android:src="@drawable/ic_search_mini" />
            </LinearLayout>


        </LinearLayout>

</android.support.v7.widget.CardView>


    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mTableLayout"
        android:layout_below="@+id/mCard"
        android:layout_alignParentStart="true">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="@drawable/cell_border">

        <TextView
            android:id="@+id/txtNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="No"
            android:background="@color/orange_color"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtSessionId"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="Session Id"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:background="@color/orange_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/orange_color"

            android:gravity="center_vertical"
            android:hint="Trans ID"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtTransactionDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:layout_gravity="left"
            android:hint="Transaction Date"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:background="@color/orange_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:hint="Total"
            android:layout_gravity="left"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:background="@color/orange_color"
            android:textSize="12sp" />

        <!--<LinearLayout
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
