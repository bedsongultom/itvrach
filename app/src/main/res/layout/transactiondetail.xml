<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical"
    android:id="@+id/transactiondetail_layout">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#F39C12"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingEnd="7dp"
            android:text="ITEM LIST TRANSACTION"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:id="@+id/txt_userid"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/txtsession_id"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/textViewEmail"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />


    </LinearLayout>




    <android.support.v7.widget.RecyclerView
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="111dp">


            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textview"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.34"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text="Sub Item"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textdot1"
                android:layout_height="wrap_content"
                android:layout_width="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.07"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text=":"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtSub_Qty"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="0.34"
                    android:elevation="1dp"
                    android:gravity="right|center_horizontal"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textview2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.34"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text="Sub Qty"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textdot2"
                android:layout_height="wrap_content"
                android:layout_width="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.07"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text=":"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtSub_item"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.34"
                android:elevation="1dp"
                android:gravity="right|center_horizontal"
                android:text="0"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/textview3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.42"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text="Sub Disc(%)"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textdot3"
                android:layout_height="wrap_content"
                android:layout_width="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.07"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text=":"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSub_DiscRp"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.34"
                android:elevation="1dp"
                android:gravity="right|center_horizontal"
                android:text="0"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textview4"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.42"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text="Sub Total"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textdot4"
                android:layout_height="wrap_content"
                android:layout_width="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.07"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text=":"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.34"
                android:elevation="1dp"
                android:gravity="right|center_horizontal"
                android:text="0"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            >

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#48366d"
                android:drawableLeft="@drawable/ic_close_white_m"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="CANCEL"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"/>


            <Button
                android:id="@+id/btnProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.78"
                android:background="#f39c17"
                android:drawableLeft="@drawable/ic_check_white_m"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="PROCESS"
                android:textColor="#ffffff" />
        </LinearLayout>




    </LinearLayout>
</LinearLayout>